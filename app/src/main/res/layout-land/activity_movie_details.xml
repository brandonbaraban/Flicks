<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context="com.codepath.flicks.MovieDetailsActivity">

        <ImageView
            android:id="@+id/ivTrailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/flicks_backdrop_placeholder"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="Scroll down for info or tap poster to view trailer!"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ff0000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title"
            android:text="Movie Title"
            android:layout_margin="5dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_below="@+id/ivTrailer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RatingBar
            android:id="@+id/rbVoteAverage"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvTitle"
            android:layout_margin="5dp"
            android:numStars="5"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/overview"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_below="@+id/rbVoteAverage"
            android:text="Movie overview and synopsis" />

        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignLeft="@+id/tvOverview"
            android:textColor="@color/title"
            android:layout_alignStart="@+id/tvOverview"
            android:layout_below="@+id/tvOverview"
            android:text="Release date:" />

    </RelativeLayout>
</ScrollView>